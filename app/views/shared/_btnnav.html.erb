   <% if current_user.nil? %>
  <%= link_to 'Back', :back, class:'button is-outlined bg-coffee has-text-white is-pulled-right mt-4' %>
  <%elsif current_user.name == @article.creator.name %>
  <span> 
    <%= link_to 'Edit', edit_article_path(@article), class:'button is-success is-outlined is-pulled-left' %>
    <%= link_to 'Delete', article_path(@article), method: :destroy, data: {confirm: 'Are you sure you want to delete this Article'}, class:'button is-danger is-outlined is-pulled-right' %><br/>
  </span><br/>
    <%= link_to 'Back', :back, class:'button is-outlined bg-coffee has-text-white is-pulled-right mt-4' %>
  <%else%>
    <%= link_to 'Back', :back, class:'button is-outlined bg-coffee has-text-white is-pulled-right mt-4' %>
  <%end%>