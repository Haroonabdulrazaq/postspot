<div class="section">
    <h2 class="title is-3 has-text-centered"><%= @article.title %> </h2>
  <div class='columns is-centered'>
  <%# image column %>
 <div class='column is-6 box'>
  <div class='column-image'>
    <figure class='image'>
     <%= image_tag(@article.image) %>
    </figure>
  </div>
    <%# text column %>
  <div class='column article-text has-text-centered'>
    <%= @article.text %>
  </div>
</div>
 
    <%# Info column %>
  <div class='column article-info is-2'>
  <nav class='panel'>
    <p class='panel-heading'>Article Info</p>

    <a class="panel-block">
        <span class="panel-icon">
        <i class='fa fa-user'></i>
        </span>
        <span class='has-text-centered'>
        <strong>Author </strong><%= @article.creator.name%>
        </span>
    </a>

    <a class="panel-block">
        <span class="panel-icon">
        <i class="fa fa-thumbs-up"></i>
        </span>
        <span class='has-text-centered'>
        <strong>Upvotes </strong><%= @article.votes.count%>
        </span>
    </a>

    <a class="panel-block">
        <span class="panel-icon">
         <i class="fa fa-time"></i>
        </span>
        <span >
        <strong>Created </strong><%= time_ago_in_words(@article.created_at) %> ago
        </span>
    </a>

    <div class="panel-block">
        <span class="panel-icon">
        <i class=""></i>
        </span>
        <span class='has-text-centered'>
         <%= voted_user %>
        </span>
    </div>

  </nav>
  <% if current_user.name == @article.creator.name %>
  <span> 
    <%= link_to 'Edit', edit_article_path(@article), class:'button is-success is-outlined is-pulled-left' %>
    <%= link_to 'Delete', article_path(@article), method: :destroy, data: {confirm: 'Are you sure you want to delete this Article'}, class:'button is-danger is-outlined is-pulled-right' %>
  </span>
  <%end%>
    <%= link_to 'Back', :back, class:'button is-outlined bg-coffee has-text-white is-pulled-right mt-4' %>
  </div>

</div>
</div>

    